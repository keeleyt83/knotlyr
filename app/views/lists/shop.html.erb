<meta name="apple-mobile-web-app-capable" content="yes">
<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" / >

<div id="contentWrapper">
  <div id="content">
    <p id="notice"><%= notice %></p>
    <h1 id="pageTitle">Knotlyr</h1>

    <div id="selectListWrapper" style="background-color:<%=@list.color%>">
    <%= select_tag "lists", options_from_collection_for_select(@lists, "id", "name", @list.id) %>
    </div>

    <div id="listWrapper">
      <div id="addNewItemWrapper">
        <div><input type="text" id="addItemName"/></div><button id="addItemBtn">Add</button><br/>
      </div>
      <ul id="itemList">
        <% if @list.items.empty? %>
          <li id="emptyItem">List is empty.</li>
        <% else %>
          <% @list.items.each do |item| %>
              <li id="item-<%= item.id %>">
                <span class="itemName"><%= item.name %></span>
                <button class='deleteItem'>X</button>
              </li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</div>
