<%= stylesheet_link_tag    "editList", :media => "all" %>
<%= javascript_include_tag "editList" %>

<p id="notice"><%= notice %></p>

<h1><%= @list.name %></h1>

<div id="listWrapper">
  <ul id="itemList">
    <% if @list.items.empty? %>
      <li id="emptyItem">List is empty.</li>
    <% else %>
      <!-- TODO: ajaxify delete -->
      <% @list.items.each do |item| %>
          <li id="item-<%= item.id %>"><span class="itemName"><%= item.name %></span><%= link_to 'X', item, method: :delete %></li>
      <% end %>
    <% end %>
  </ul>
</div>
<div id="addNewItemWrapper">
  <input type="text" id="addItemName"/><button id="addItemBtn">Add</button>
</div>

